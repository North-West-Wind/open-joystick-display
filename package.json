{
  "name": "open-joystick-display-transparent",
  "version": "2.9.0",
  "description": "A powerful and easy to use streamer-ready overlay for your joystick or gamepad. Completely free and open source.",
  "author": "KernelZechs, Open Joystick Display <void@kernelzechs.com>",
  "exports": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "gulp build && gulp rebuild-electron && electron-builder",
    "start": "node dist/index.js",
    "test": "nodemon --esm src/index.ts & webpack -w --config webpack.dev.js"
  },
  "build": {
    "appId": "open-joystick-display-transparent",
    "artifactName": "open-joystick-display-transparent-${version}.${ext}",
    "productName": "Open Joystick Display Transparent",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "./app/icons/icon.png",
      "target": [
        {
          "target": "tar.gz"
        },
        {
          "target": "deb"
        },
        {
          "target": "AppImage"
        }
      ],
      "category": "Multimedia"
    },
    "win": {
      "icon": "./app/icons/icon.ico",
      "target": [
        {
          "target": "zip"
        },
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./app/icons/icon.icns",
      "target": "zip"
    }
  },
  "dependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "clone": "^2.1.2",
    "conf": "^12.0.0",
    "configstore": "^6.0.0",
    "electron-store": "^4.0.0",
    "express": "^4.18.2",
    "jquery": "^3.7.1",
    "json-socket": "^0.3.0",
    "lodash": "^4.17.14",
    "original-fs": "^1.0.0",
    "promise": "^8.0.3",
    "sanitize-html": "^1.20.1",
    "serialport": "^12.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@types/clone": "^2.1.4",
    "@types/conf": "^3.0.0",
    "@types/configstore": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/jquery": "^3.5.27",
    "@types/json-socket": "^0.1.20",
    "@types/node": "^20.9.0",
    "@types/node-hid": "^1.3.4",
    "@types/sanitize-html": "^2.9.4",
    "electron": "4.0.3",
    "electron-builder": "^20.38.5",
    "electron-rebuild": "^1.8.4",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-connect": "^5.7.0",
    "gulp-less": "^4.0.1",
    "gulp-minify": "^3.1.0",
    "less": "^3.9.0",
    "node-watch": "^0.6.2",
    "nodemon": "^3.0.1",
    "stream-combiner2": "^1.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-merge": "^5.10.0"
  }
}
