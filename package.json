{
  "name": "open-joystick-display-transparent",
  "version": "2.9.0",
  "description": "A powerful and easy to use streamer-ready overlay for your joystick or gamepad. Completely free and open source.",
  "author": "KernelZechs, Open Joystick Display <void@kernelzechs.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "gulp build && gulp rebuild-electron && electron-builder",
    "start": "electron .",
    "build:dev": "tsc -w --preserveWatchOutput",
    "start:dev": "nodemon dist/index.js & webpack -w --config webpack.dev.js"
  },
  "build": {
    "appId": "open-joystick-display-transparent",
    "artifactName": "open-joystick-display-transparent-${version}.${ext}",
    "productName": "Open Joystick Display Transparent",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "./app/icons/icon.png",
      "target": [
        {
          "target": "tar.gz"
        },
        {
          "target": "deb"
        },
        {
          "target": "AppImage"
        }
      ],
      "category": "Multimedia"
    },
    "win": {
      "icon": "./app/icons/icon.ico",
      "target": [
        {
          "target": "zip"
        },
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./app/icons/icon.icns",
      "target": "zip"
    }
  },
  "dependencies": {
    "clone": "^2.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jquery": "^3.4.1",
    "json-socket": "^0.3.0",
    "msgpack-lite": "^0.1.26",
    "promise": "^8.0.3",
    "sanitize-html": "^1.20.1",
    "serialport": "^12.0.0",
    "store": "^2.0.12",
    "url": "^0.11.3",
    "ws": "^8.14.2",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@types/clone": "^2.1.4",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jquery": "^3.5.27",
    "@types/json-socket": "^0.1.20",
    "@types/msgpack-lite": "^0.1.11",
    "@types/node": "^20.9.0",
    "@types/sanitize-html": "^2.9.4",
    "@types/store": "^2.0.5",
    "@types/ws": "^8.5.9",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-connect": "^5.7.0",
    "gulp-less": "^4.0.1",
    "gulp-minify": "^3.1.0",
    "less": "^3.9.0",
    "nodemon": "^3.0.1",
    "path-browserify": "^1.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}
